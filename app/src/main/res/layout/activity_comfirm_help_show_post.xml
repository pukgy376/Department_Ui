<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="374dp"
            android:layout_height="1000dp"
            android:layout_gravity="center"
            android:background="@drawable/trans_white_rectangle"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="25dp">

                    <ImageView
                        android:id="@+id/ImViewProfile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/lham"></ImageView>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"
                    android:fontFamily="@font/mitr"
                    android:hint="ชื่่อผู้ใช้งาน"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textSize="24sp" />
            </LinearLayout>
            <TextView
                android:id="@+id/Showtopic"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mitr_semibold"
                android:hint="หัวข้อการแจ้งเหตุ"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="24sp" />
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="fill_parent"
                android:layout_height="210dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/view" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:drawableLeft="@drawable/ic_border_color"
                android:drawablePadding="5dp"
                android:fontFamily="@font/mitr"
                android:text="ประเภท"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Showtype"
                android:layout_width="206dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:fontFamily="@font/mitr"
                android:hint="ประเภทการแจ้งเหตุ"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView45"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/ic_border_color"
                android:drawablePadding="5dp"
                android:fontFamily="@font/mitr"
                android:text="ระดับความรุนแรง"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Showleval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:fontFamily="@font/mitr"
                android:hint="ระดับความรุนแรง"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/ic_border_color"
                android:drawablePadding="5dp"
                android:fontFamily="@font/mitr"
                android:text="รายละเอียด"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Showdetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:fontFamily="@font/mitr"
                android:hint="รายละเอียดการแจ้งเหตุ"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/ic_border_color"
                android:drawablePadding="5dp"
                android:fontFamily="@font/mitr"
                android:text="สถานที่เกิดเหตุ"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Showlacation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:fontFamily="@font/mitr"
                android:hint="เหตุเกิดที่ใด"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_border_color"
                android:drawablePadding="5dp"
                android:fontFamily="@font/mitr"
                android:text="สถานะ"
                android:textSize="22sp"
                android:textStyle="bold" />
            <Spinner
                android:id="@+id/spinner_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/mitr"
                android:gravity="center"
                android:spinnerMode="dialog" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_border_color"
                android:drawablePadding="5dp"
                android:fontFamily="@font/mitr"
                android:text="ระบุการช่วยเหลือ"
                android:textSize="22sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/edit_detail"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:ems="10"
                android:fontFamily="@font/mitr"
                android:gravity="start|top"
                android:hint="มีอะไรเกิดขึ้นบ้าง"
                android:inputType="textMultiLine"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/login_button"
                    android:fontFamily="@font/mitr"
                    android:text="บันทึก"
                    android:textSize="20dp" />
                <Button
                    android:id="@+id/cancle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/cancle_button"
                    android:fontFamily="@font/mitr"
                    android:text="ยกเลิก"
                    android:textSize="20dp" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</ScrollView>